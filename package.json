{
  "name": "cloudflare-worker-template",
  "version": "1.0.0",
  "description": "Next.js on Cloudflare Pages with Edge Runtime, D1, R2, and KV",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "pnpm dlx @cloudflare/next-on-pages",
    "pages:deploy": "pnpm run pages:build && wrangler pages deploy",
    "pages:deploy:test": "pnpm run pages:build && wrangler pages deploy --config wrangler.test.toml",
    "pages:deploy:prod": "pnpm run pages:build && wrangler pages deploy --config wrangler.prod.toml",
    "wrangler": "wrangler",
    "cf:dev": "wrangler pages dev .vercel/output/static",
    "db:create:test": "wrangler d1 create cloudflare-worker-template-test",
    "db:create:prod": "wrangler d1 create cloudflare-worker-template-prod",
    "db:migrations:create": "wrangler d1 migrations create cloudflare-worker-template-local",
    "db:migrations:list": "wrangler d1 migrations list cloudflare-worker-template-local --local",
    "db:migrate:local": "wrangler d1 migrations apply cloudflare-worker-template-local --local",
    "db:migrate:test": "wrangler d1 migrations apply cloudflare-worker-template-test --remote --config wrangler.test.toml",
    "db:migrate:prod": "wrangler d1 migrations apply cloudflare-worker-template-prod --remote --config wrangler.prod.toml",
    "db:validate": "node scripts/validate-migrations.js",
    "db:seed": "node scripts/seed.js",
    "prisma:generate": "prisma generate",
    "r2:create:test": "wrangler r2 bucket create cloudflare-worker-template-test",
    "r2:create:prod": "wrangler r2 bucket create cloudflare-worker-template-prod",
    "kv:create:test": "wrangler kv:namespace create KV --env test",
    "kv:create:prod": "wrangler kv:namespace create KV --env production",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": [
    "next.js",
    "cloudflare",
    "edge",
    "d1",
    "r2",
    "workers"
  ],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@prisma/adapter-d1": "^6.17.1",
    "@prisma/client": "^6.17.1",
    "next": "15.5.2",
    "next-intl": "^3.28.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.12",
    "resend": "^4.0.0",
    "nodemailer": "^6.9.17"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@cloudflare/workers-types": "^4.20251011.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.17.13",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-config-next": "15.5.2",
    "happy-dom": "^20.0.2",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prisma": "^6.17.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.43.0"
  }
}

# 环境变量示例文件
# 复制此文件为 .env.local 并填入实际值

# 应用配置
NEXT_PUBLIC_SITE_URL=https://topqfiller.com
NODE_ENV=development

# 数据库配置 (Cloudflare D1)
DATABASE_URL=file:./dev.db

# R2存储配置
R2_ACCOUNT_ID=c42aa3032fe25e2758e1f653d407d62c
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=image

# 邮件服务配置 (Resend)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@topqfiller.com
FROM_NAME=TOP-Q Filler

# 邮件服务配置 (Mailjet - 备选)
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key

# 安全配置
TURNSTILE_SECRET_KEY=0x4AAAAAAB9O7CMABA21jFqT
SESSION_SECRET=your_session_secret_key

# Cloudflare配置
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# 缓存配置
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000

# 性能监控
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD_MS=1000

# 国际化配置
SUPPORTED_LOCALES=en,de,ja,fr,th,es,ru,pt,it,nl,pl,ko,id
DEFAULT_LOCALE=en

# 邮件模板ID (Mailjet)
